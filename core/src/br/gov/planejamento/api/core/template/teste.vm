	<body>
		<div id="barra-brasil" style="background:#7F7F7F; height: 20px; padding:0 0 0 10px;display:block;"> 
		<ul id="menu-barra-temp" style="list-style:none;">
			<li style="display:inline; float:left;padding-right:10px; margin-right:10px; border-right:1px solid #EDEDED"><a href="http://brasil.gov.br" style="font-family:sans,sans-serif; text-decoration:none; color:white;">Portal do Governo Brasileiro</a></li> 
			<li><a style="font-family:sans,sans-serif; text-decoration:none; color:white;" href="http://epwg.governoeletronico.gov.br/barra/atualize.html">Atualize sua Barra de Governo</a></li>
		</ul>
	</div>

	<div id="container">
		<script src="//barra.brasil.gov.br/barra.js" type="text/javascript"></script>
		
		
		#if( $response.isList() )
			#set($offset = $session.offsetValue)
			#set($count = $response.count)
			
			#if ($count > 0)
				#set($first = $offset + 1)
				#if (($count - $offset) > 500)
					#set($last = $offset + 500)
				#else
					#set($last = $count)
				#end
			#else
				#set($first = 0)
				#set($last = 0)
			#end
			<hr class="barra" style="margin: 0px;"/>
			<p class="num-resultados"><small>Exibindo resultados $first - $last de $count</small></hp>					
			
		
			<ul class="pager">
				#if($prev)
					<li class="previous lista-botao">
						<a href="$prev">Anterior</a>
					</li>
				#end
				#if($next)
					<li class="next lista-botao"> 
						<a href="$next">Próxima</a> 
					</li>
				#end 
			</ul>
				<h1>$response.name</h1>
			#set($first = $response.get(0))
			<table border="1">
				<thead><tr>
					#foreach($property in $first.properties)
						<th>$property.name</th>
					#end
				</tr></thead>
				#foreach( $resource in $response )
					<tr>
						#foreach($property in $resource.properties)
							<td>$property.value</td>
						#end
					</tr>
		    	#end
	    	</table>
    	#else
    		<h1>not list</h1>
    	#end
	</body>
